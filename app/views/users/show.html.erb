<!-- Logged in Home page -->


<!-- Banner -->
<div class="container home-page-banner-margin">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="banner-logged-in">
        <div class="banner-content text-center">
          <h2 class="logged-in-home-page">Click on the button</h2>
          <h3 class="logged-in-home-page">to launch your newsfeed analysis</h3>
          <p><br></p>
          <%= link_to analytics_path, class: "manual-button" do %>
            <div class="manual-button-space"></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


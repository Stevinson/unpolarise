<!-- Logged out banner -->

<div class="container">

  <!-- Display this banner only when the user is logged out -->
  <% if user_signed_in? == false %>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="banner">
          <div class="banner-content text-center">
            <p><%= image_tag("h1-home.svg", class: "width-500") %></p>
            <h2>Understand the news you consume online everyday</h2>
            <p><br></p>
            <%= link_to "Sign up with Facebook", omniauth_authorize_path(:user, :facebook), class: "btn-facebook btn-form" %>
            <div data-0="background-color:rgb(0,0,255);transform[bounce]:rotate(0deg);" data-top="background-color:rgb(255,0,0);transform[bounce]:rotate(360deg);">WOOOT</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>


<!-- This page is accessible only to admins (who need to be signed in so we can check they're admins) -->

<% if user_signed_in? %>
  <% if current_user.admin? %>

    <!-- The page that displays all the info about an article -->
    <!-- Article banner image -->
    <div class="body-container">
      <% if @article.photo? %>
        <div class="banner-unpolarise" style="background-image: url('<%= cl_image_path @article.photo.path %>') "></div>
            <%# cl_image_tag @article.photo.path, class: "banner-unpolarise", crop: :fill %>
      <% end %>
      <!-- Article information -->
      <div class="container padded-top">

        <div class="row">

          <div class="col-xs-12">

            <div class="row">
              <div class="col-xs-12">
                <h2><%= @article.title %></h2>
                <%= image_tag(cl_image_path @article.photo.path) %>
              </div>
            </div>
            <div class="row">
              <!-- Date added -->
              <div class="col-xs-10">
                <p>Posted on <%= @article.created_at.to_date %></p>
              </div>
              <!-- Links to edit and delete -->
              <div class="col-xs-2">
                  <%= link_to edit_article_path(@article) do %>
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to article_path(@article), method: :delete do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
              </div>
            </div>

            <!-- Summary -->
            <div class="row">
              <div class="col-xs-12">
                <p><em><%= @article.summary %></em></p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%= render 'shared/404' %>
  <% end %>
<% end %>




